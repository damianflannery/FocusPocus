<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
	android:id="@+id/show_context_rail"
	android:paddingBottom="4.0dip"
	android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:background="@drawable/footer_button_background"
	>

	<ImageView
		android:id="@+id/context_rail_affordance"
		android:layout_width="45dip"
		android:layout_height="60dip"
		android:src="@drawable/rail"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true" 
		android:background="@drawable/footer_button_background"
		android:visibility="visible"
		android:scaleType="center"
		/>

	<ImageView
		android:id="@+id/search_result_image"
		android:layout_width="50.0dip"
		android:layout_height="50.0dip"
		android:layout_marginLeft="6.0dip"
		android:layout_marginTop="6.0dip"
		android:src="@drawable/stub" />

	<TextView
		android:id="@+id/search_result_title"
		android:textSize="14.0sp"
		android:textColor="@color/text_color"
		android:singleLine="true"
		android:ellipsize="end"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="6.0dip"
		android:layout_marginTop="2.0dip"
		android:layout_marginRight="6.0dip"
		android:layout_toLeftOf="@id/context_rail_affordance"
		android:layout_toRightOf="@id/search_result_image"
		 />
	<TextView
		android:id="@+id/search_result_serving"
		android:textSize="12.0sp"
		android:textColor="@color/gray_color"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5.0dip"
		android:layout_toLeftOf="@id/context_rail_affordance"
		android:layout_toRightOf="@id/search_result_image"
		android:layout_below="@id/search_result_title" 
	/>


	<LinearLayout
		android:id="@+id/search_result_tags_linearlayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_toLeftOf="@id/context_rail_affordance"
		android:layout_toRightOf="@id/search_result_image"
		android:layout_below="@id/search_result_serving"
		android:paddingTop="4dip">

		<TextView
			android:id="@+id/search_result_cals_tv"
			android:textSize="10.0sp"
			android:textColor="@color/white_color"
			android:layout_height="wrap_content"
			android:paddingLeft="2.0dip"
			android:paddingRight="2.0dip"
			android:layout_marginLeft="3.0dip"
			android:background="@drawable/small_tag_shape"
			android:lines="1"
			android:singleLine="true"
			android:layout_width="wrap_content"
			android:text="cals 90" />

		<TextView
			android:id="@+id/search_result_fat_tv"
			android:textSize="10.0sp"
			android:textColor="@color/white_color"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="2.0dip"
			android:paddingRight="2.0dip"
			android:layout_marginLeft="3.0dip"
			android:background="@drawable/small_tag_shape"
			android:lines="1"
			android:singleLine="true"
			android:text="fat 1g" />
		
		<TextView
			android:id="@+id/search_result_carbs_tv"
			android:textSize="10.0sp"
			android:textColor="@color/white_color"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="2.0dip"
			android:paddingRight="2.0dip"
			android:layout_marginLeft="3.0dip"
			android:background="@drawable/small_tag_shape"
			android:lines="1"
			android:singleLine="true"
			android:text="carbs 3g" />
			
		<TextView
			android:id="@+id/search_result_protein_tv"
			android:textSize="10.0sp"
			android:textColor="@color/white_color"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="2.0dip"
			android:paddingRight="2.0dip"
			android:layout_marginLeft="3.0dip"
			android:background="@drawable/small_tag_shape"
			android:lines="1"
			android:singleLine="true"
			android:text="protein 4.6g" />

	</LinearLayout>




</RelativeLayout>